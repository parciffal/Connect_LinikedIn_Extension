{
  "name": "LinkedIn Connection Checker",
  "version": "1.0",
  "description": "Checks LinkedIn connections and adds new ones to Google Sheets",
  "manifest_version": 3,
  "permissions": [
    "downloads",
    "activeTab",
    "https://www.linkedin.com/*",
    "https://sheets.googleapis.com/",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}